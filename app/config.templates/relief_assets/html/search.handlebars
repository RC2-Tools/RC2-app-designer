{{#> reliefLayout }}
    {{#*inline "mainContent" }}
        {{> pageTitle }}

        <select id="field" class="custom-select text-center rounded-pill w-75 mx-auto mb-3"></select>
        {{> textInput id="value" }}

        {{> menuBtn
                id="search"
                icon=(concat @root.assetsPath "/img/search_icon.svg")
                label="search"
        }}

        {{> textBlock id="search_results" }}

        {{> menuItem
                id="launch"
                icon=(concat @root.assetsPath "/img/enter_icon.svg")
                label="view"
        }}
    {{/inline}}

    {{#*inline "bodyEnd" }}
        <script type="text/javascript" src="{{ @root.reliefAssetsPath }}/js/renderers/search.js"></script>

        <script>
            'use strict';
            $(util.renderPage(display));
        </script>
    {{/inline}}
{{/reliefLayout}}
