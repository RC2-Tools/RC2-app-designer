{{#> reliefLayout }}
    {{#*inline "mainContent" }}
        {{> pageTitle token="main_title" }}

        {{> menuItem
                id="register"
                class="workflow-required workflow-optional workflow-id-only"
                icon=(concat @root.assetsPath "/img/reg_icon.svg")
                label="registration"
        }}

        {{> menuItem
                id="deliver"
                class="workflow-required workflow-optional workflow-none"
                icon=(concat @root.assetsPath "/img/dist_icon.svg")
                label="delivery_upper_case"
        }}

        {{> menuItem
                id="visit"
                class="workflow-required workflow-optional"
                icon=(concat @root.assetsPath "/img/visit_icon.svg")
                label="visit_menu"
        }}

        {{> menuItem
                id="data"
                class="workflow-required workflow-optional workflow-id-only workflow-none"
                icon=(concat @root.assetsPath "/img/view_data_icon.svg")
                label="data_path"
        }}

        {{> menuItem
                id="overrides"
                class="workflow-superuser"
                icon=(concat @root.assetsPath "/img/admin_icon.svg")
                label="administrator_options"
        }}
    {{/inline}}

    {{#*inline "bodyEnd" }}
        <script type="text/javascript" src="{{ @root.reliefAssetsPath }}/js/renderers/beneficiary_index.js"></script>
        <script type="text/javascript" src="{{ @root.reliefAssetsPath }}/js/renderers/token_index.js"></script>

        <script>
            'use strict';

            $(function () {
              if (util.getWorkflowMode() === util.workflow.none) {
                  $(util.renderPage(tokenIndex.display));
              } else if (util.getWorkflowMode() === util.workflow.optional ||
                      util.getWorkflowMode() === util.workflow.required ||
                      util.getWorkflowMode() === util.workflow.idOnly) {
                  $(util.renderPage(beneficiaryIndex.display));
              }
            });
        </script>
    {{/inline}}
{{/reliefLayout}}
