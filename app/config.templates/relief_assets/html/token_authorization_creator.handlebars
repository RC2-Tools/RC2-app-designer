{{#> reliefLayout }}
    {{#*inline "mainContent" }}
        {{> pageTitle token="choose_authorization_name" }}

        <input type="text" id="code" class="form-control mb-3 mx-auto w-50">

        {{> menuBtn
                id="trigger"
                icon=(concat @root.assetsPath "/img/reg_icon.svg")
                label="create_authorization"
        }}

        {{> textBlock id="confirmation" }}
    {{/inline}}

    {{#*inline "bodyEnd" }}
        <script type="text/javascript" src="{{ @root.reliefAssetsPath }}/js/renderers/token_authorization_creator.js"></script>

        <script>
            'use strict';
            $(util.renderPage(function () {
                document.getElementById('trigger').addEventListener('click', triggerAuthorizationCreation)
            }));
        </script>
    {{/inline}}
{{/reliefLayout}}
